@{
    ViewData["Title"] = "Tồn kho";
}

<head>
    <link rel="stylesheet" href="~/css/TonKho.css" />
</head>

<h2 class="text-center mb-4">Tồn kho</h2>
<div class="mb-3">
    <input type="text" id="searchInput" class="form-control" onkeyup="searchFunction()" placeholder="Tìm kiếm theo tên hàng hóa">
</div>

<div class="justify-content-between mb-3">
    <div class="d-flex align-items-center">
        <label class="me-3" for="rowsPerPage">Kho hàng:</label>
        <select id="warehouseSelect" class="form-select" style="width: 50%;">
            <option value="DC Thanh Pham" selected>DC Thành Phẩm</option>
            <option value="DC Nguyen Lieu">DC Nguyên Liệu</option>
            <option value="DC May Moc">DC Máy Móc</option>
            <option value="DC Phu Tung">DC Phụ Tùng</option>
        </select>
    </div>
</div>

<div class="table-responsive">
    <table id="quotationTable" class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th class="fixed-column">Tên hàng</th>
                <th class="fixed-column-2">Quy cách</th>
                <th>Đơn vị</th>
                <th>Lượng tồn</th>
                <th>SL thùng</th>
                <th>Hộp/thùng</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            <!-- Nội dung bảng sẽ được load qua JS -->
        </tbody>
    </table>
</div>
<!-- Phân trang -->
<div class="row mb-3">
    <div class="justify-content-between col-6" style="margin-top: 2px;">
        <div class="d-flex align-items-center">
            <label class="" for="rowsPerPage">Số dòng:</label>
            <select id="rowsPerPage" class="form-select" style="width: 50%;" onchange="changeRowsPerPage()">
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="50">100</option>
            </select>
        </div>
    </div>
    <div id="pagination" class="pagination col-6"></div>
</div>

<div class="d-flex justify-content-center mt-1">
    <button class="btn btn-primary" onclick="window.location.href='/Home'">
        Back
    </button>
</div>

<script src="~/js/TonKho.js"></script>