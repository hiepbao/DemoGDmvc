@{
    ViewData["Title"] = "Giao hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<head>
    <link rel="stylesheet" href="~/css/ChiTietGiaoHang.css" />
</head>

        <h2 class="text-center mb-4">Giao hàng</h2>
        <div class="mb-3">
            <input type="text" id="searchInput" class="form-control" onkeyup="searchFunction()" placeholder="Tìm kiếm theo khách hàng/ tên hàng">
        </div>
        <div class="mb-3">
            <div class="align-items-center">
                <div class="d-flex align-items-center">
                    <label for="startDate" class="me-2">Từ ngày:</label>
                    <input type="date" id="startDate" class="form-control">
                </div>
            </div>
            <div class="align-items-center mt-3">
                <div class="d-flex align-items-center">
                    <label for="endDate" class="me-2">Tới ngày:</label>
                    <input type="date" id="endDate" class="form-control">
                </div>
            </div>
        </div>
        

        <div class="table-responsive">
            <table id="quotationTable" class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th class="fixed-column">Khách hàng</th>
                        <th class="fixed-column-2">Ngày giao</th>
                        <th class="fixed-column-2">Số phiếu</th>
                        <th class="fixed-column-2">Số PO</th>
                        <th class="fixed-column-2">CN</th>
                        <th class="fixed-column-2">Trị giá</th>
                        <th class="fixed-column-2">Trị giá VAT</th>
                        <th class="fixed-column-2">Thành tiền</th>
                        <th class="fixed-column-2">Ghi chú</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <!-- Nội dung bảng sẽ được load qua JS -->
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
         <div class="row mb-3" style="margin-top: 5px;" >
            <div class="justify-content-between col-6" >
                <div class="d-flex align-items-center">
                    <label class="" for="rowsPerPage">Số dòng:</label>
                    <select id="rowsPerPage" class="form-select" style="width: 50%;" onchange="changeRowsPerPage()">
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="50">100</option>
                    </select>
                </div>
            </div>
            <div id="pagination" class="pagination col-6"></div>
         </div>

<script src="~/js/ChiTietGiaoHang.js"></script>


