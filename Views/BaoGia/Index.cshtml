@{
    ViewData["Title"] = "Báo giá";
}

<head>
    <link rel="stylesheet" href="~/css/BaoGia.css" />
</head>

<h2 class="text-center mb-4">Báo giá</h2>
<div class="mb-3">
    <input type="text" id="searchInput" class="form-control" onkeyup="searchFunction()" placeholder="Tìm kiếm theo khách hàng">
</div>

<table id="quotationTable" class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Khách hàng</th>
            <th>Số phiếu</th>
            <th>Ngày áp dụng</th>
            <th>Phụ trách</th>
        </tr>
    </thead>
    <tbody id="tableBody">
    </tbody>
</table>
<!-- Phân trang -->
<div class="row mb-3">
    <div class="justify-content-between col-6" style="margin-top: 2px;">
        <div class="d-flex align-items-center">
            <label class="" for="rowsPerPage">Số dòng:</label>
            <select id="rowsPerPage" class="form-select" style="width: 50%;" onchange="changeRowsPerPage()">
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="50">100</option>
            </select>
        </div>
    </div>
    <div id="pagination" class="pagination col-6"></div>
</div>

<script src="~/js/BaoGia.js"></script>
