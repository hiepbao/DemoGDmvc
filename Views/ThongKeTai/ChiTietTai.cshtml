@{
    ViewData["Title"] = "Chi tiết tải";
}

<head>
    <link rel="stylesheet" href="~/css/ChiTietTai.css" />
</head>

<h2 class="text-center mb-4">Chi tiết tải theo khách hàng</h2>
<div class="">
    <div class="row">
        <div class="row" style="height: 28px;">
            <label class="col-4"> Khách hàng:</label>
            <label class="col-8">CTY 01</label>
        </div>
        <div class="row" style="height: 28px;">
            <label class="col-4"> Phụ trách:</label>
            <label class="col-8">Lê Khác Hòa</label>
        </div>
        <div class="justify-content-between mb-3">
            <div class="d-flex align-items-center">
                <label class="" for="rowsPerPage" style="width: 30%;">Năm:</label>
                <select id="warehouseSelect" class="form-select" style="width: 50%;">
                    <option value="DC Thanh Pham" selected>2022</option>
                    <option value="DC Nguyen Lieu">2022</option>
                    <option value="DC May Moc">2021</option>
                    <option value="DC Phu Tung">2024</option>
                </select>
            </div>
        </div>
    </div>
</div>
<table id="quotationTable" class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Tháng</th>
            <th>Tổng tiền</th>
            <th>Trọng lượng (N.W)</th>
            <th>Trọng lượng (G.W)</th>
        </tr>
    </thead>
    <tbody>
        <script>
            for (let i = 1; i <= 12; i++) {
                document.write(`
                                        <tr>
                                            <td>${i}</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    `);
            }
        </script>
        <tr>
            <td>Tổng</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>

<script src="~/js/ChiTietTai.js"></script>